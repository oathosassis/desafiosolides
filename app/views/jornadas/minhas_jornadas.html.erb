<div class="container" style="margin-top: 20px;">
  <h2 style="color: #706b97; text-align: center; margin-bottom: 15px;">
    Minhas Jornadas
  </h2>
  
  <div class="row" style="margin-bottom: 25px;">
    <div class="col-12">
      <%= form_tag({controller: "jornadas", action: "minhas_jornadas"}, method: "get") do %>
        <div class="input-group col-sm-10 offset-sm-1 col-md-8 offset-md-2">
          <span class="input-group-addon" style="padding-right: 4px; padding-top: 8px; width: 69px;">
            <i class="ace-icon fa fa-calendar"></i> Inicial:
          </span>
          <%= date_field_tag "data_inicial", @data_inicial, class: "form-control", min: "2020-01-01", max: Date.today %>
        </div>
        <div class="input-group col-sm-10 offset-sm-1 col-md-8 offset-md-2">
          <span class="input-group-addon" style="padding-right: 4px; padding-top: 8px; width: 69px;">
            <i class="ace-icon fa fa-calendar"></i> Final:
          </span>
          <%= date_field_tag "data_final", @data_final, class: "form-control", min: "2020-01-01", max: Date.today %>   
          <div class="input-group-btn hidden-print">
            <button name="commit" type="submit" class="btn btn-primary btn-success" style="padding: 6px 8px 6px 9px; border-width: 1px; margin-right: 1px;">
              <i class="ace-icon fa fa-search" style="margin: 0px;"></i>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="table-responsive">
        <table class="table table-striped table-sm" style="text-align: center;">
          <thead>
            <tr>
              <th style="text-align: center;">Dia</th>
              <th style="text-align: center;">In√≠cio</th>
              <th style="text-align: center;">Fim</th>
              <th class="d-none d-sm-table-cell" style="text-align: center;">Intervalos</th>
              <th class="d-none d-sm-table-cell" style="text-align: center;">Tempo Total</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render 'table_body_jornadas', ultimas_jornadas: @minhas_jornadas, mostrar_botoes: true %>
          </tbody>
        </table>
      </div>
      <%= link_to '<i class="fa fa-arrow-left" aria-hidden="true" style="margin-left: 5px;"></i> <b>Voltar</b>'.html_safe, jornadas_path, style: "float: left; font-size: 16px; margin-bottom: 20px;" %>
      <%= link_to '<i class="fa fa-arrow-left" aria-hidden="true" style="margin-left: 5px;"></i> <b>Imprimir</b>'.html_safe, jornadas_path, style: "float: right; font-size: 16px; margin-bottom: 20px;" %>
    </div>
  </div>
</div>